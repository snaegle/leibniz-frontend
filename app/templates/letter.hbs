{{#if content.brief_nummer}}

  {{letter-header content=content}}

  <main class="content" id="content">

    {{#unless rendered}}
      <div class="content_loading">
        <span class="sr-only">{{{t 'loading'}}}</span>
      </div>
    {{/unless}}

    <div class="content_lanes {{if rendered '-rendered'}}">

      {{#if content.volltext}}

        {{#each content.view.lanes as |lane index|}}

          {{#if index}}
            {{!TODO: Find a way to omit those parameters}}
            {{drag-handle beforeResize='clearVariantConnectors' afterResize='positionVariants'}}
          {{/if}}

          {{letter-lane lane=lane content=content laneTypes=laneTypes positionVariants='positionVariants'}}

        {{/each}}

      {{else}}

        <div class="lane">
          <p class="transcript_fulltext-not-available">{{{t 'fulltextNotAvailable'}}}</p>
        </div>

      {{/if}}

    </div>

  </main>

{{else}}

  {{#if content.error}}

      <div class="header_main">
        <h1 class="header_title">
          {{{t 'databaseError'}}}
        </h1>
        <p>{{content.error}}</p>
      </div>

  {{else}}

    <div class="header_main">
      <h1 class="header_title">
        {{{t 'letterNotExisting' id=content.id}}}
      </h1>
    </div>

  {{/if}}

{{/if}}
